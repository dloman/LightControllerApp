<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
    android:orientation="vertical" >

    <CheckedTextView
        android:id="@+id/checkedTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar1"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFF00" 
        android:text="Slosh Frequency" />

      <SeekBar
          android:id="@+id/seekBar1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          android:progress="50" 
          android:layout_marginBottom="58dp" />

      <Button
          android:id="@+id/SloshButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginTop="45dp"
          android:layout_toRightOf="@+id/checkedTextView1"
          android:text="Start Slosh" />

      <Button
          android:id="@+id/OffButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/SloshButton"
          android:layout_toLeftOf="@+id/checkedTextView1"
          android:text="Lights Off" />

</RelativeLayout>